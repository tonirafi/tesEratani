<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@color/white">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">
    <TextView
        android:id="@+id/tvTotalBarang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_10"
        android:fontFamily="@font/helvetica"
        android:maxLines="1"
        android:text="-"
        android:textSize="@dimen/text_16"
        android:textColor="@color/text_black"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helvetica"
        android:maxLines="1"
        android:text="Total Barang"
        android:textColor="@color/text_black"/>
</LinearLayout>
    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/text_10"
        android:background="@color/text_gray2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white">
        <TextView
            android:id="@+id/tvTotalStok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_10"
            android:fontFamily="@font/helvetica"
            android:maxLines="1"
            android:text="-"
            android:textSize="@dimen/text_16"
            android:textColor="@color/text_black"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica"
            android:maxLines="1"
            android:text="Total Stok"
            android:textColor="@color/text_black"/>
    </LinearLayout>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/text_10"
        android:background="@color/text_gray2"/>
    <TextView
        android:id="@+id/tvTotalUang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/helvetica"
        android:layout_marginBottom="@dimen/text_10"
        android:layout_marginTop="@dimen/text_10"
        android:text="-"
        android:textSize="18dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_gray2"/>


</LinearLayout>