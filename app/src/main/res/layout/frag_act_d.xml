<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:paddingLeft="@dimen/comm_gap_16"
    tools:paddingRight="@dimen/comm_gap_16">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_topup"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_aspect_ratio="1"
        app:riv_corner_radius_top_left="@dimen/radius_small"
        app:riv_corner_radius_top_right="@dimen/radius_small" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ic_topup"
        app:layout_constraintStart_toStartOf="@+id/ic_topup"
        app:layout_constraintTop_toBottomOf="@+id/ic_topup" />

    <TextView
        android:id="@+id/actDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/comm_gap_16"
        android:layout_marginTop="@dimen/comm_gap_15"
        android:layout_marginRight="@dimen/comm_gap_16"
        android:ellipsize="end"
        android:fontFamily="@font/helvetica"
        android:maxLines="3"
        android:textColor="@color/text_333"
        android:textSize="@dimen/text_14"
        app:layout_constraintEnd_toEndOf="@+id/ic_topup"
        app:layout_constraintStart_toStartOf="@+id/ic_topup"
        app:layout_constraintTop_toBottomOf="@+id/ic_topup"
        tools:text="Edgemere Farm in Rockaway Beach, Needs Your Help! " />


    <TextView
        android:id="@+id/viewDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/comm_gap_3"
        android:layout_marginEnd="@dimen/comm_gap_16"
        android:layout_marginRight="@dimen/comm_gap_16"
        android:layout_marginBottom="@dimen/comm_gap_8"
        android:fontFamily="@font/helvetica"
        android:padding="@dimen/comm_gap_10"
        android:text="uyffhgfg"
        android:textColor="@color/text_green"
        android:textSize="@dimen/text_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ic_topup"
        app:layout_constraintTop_toBottomOf="@+id/actDesc"
        app:layout_goneMarginTop="@dimen/comm_gap_12" />


    <TextView
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/comm_gap_8"
        android:layout_marginRight="@dimen/comm_gap_8"
        android:fontFamily="@font/helvetica"
        android:padding="@dimen/comm_gap_10"
        android:text="close"
        android:textColor="@color/text_999"
        android:textSize="@dimen/text_16"
        app:layout_constraintBaseline_toBaselineOf="@+id/viewDetail"
        app:layout_constraintEnd_toStartOf="@+id/viewDetail"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="@+id/ic_topup" />

</androidx.constraintlayout.widget.ConstraintLayout>