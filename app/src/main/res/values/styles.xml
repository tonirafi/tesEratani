<resources xmlns:target="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/redDark</item>
        //6.0以下的系统 状态栏统一使用默认 6.0以上系统使用沉浸式 因为6.0以上可设置状态栏字体颜色 从而避免api大于等于19但api小于23的系统中出现状态栏文字显示不明显的问题
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:textColorPrimary">@color/text_333</item>
        <item name="android:textColorSecondary">@color/color_txt_hint</item>
        <item name="android:fontFamily">@font/roboto_regular</item>

        <!--设置默认button样式-->
        <item name="buttonStyle">@style/defaultButtonStyle</item>

        <!--设置默认文本编辑框样式-->
        <item name="editTextBackground">@drawable/shape_rect_c4_white</item>
        <item name="editTextColor">@color/color_txt_default</item>
        <item name="editTextStyle">@style/defaultEditTextStyle</item>

        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/colorControlNormal</item>

        <item name="android:windowAnimationStyle">@style/activityAnimStyle</item>

        <item name="android:colorBackground">@color/white</item>

        <item name="android:windowBackground">@drawable/pre_splash_bg</item>
        <item name="android:radioButtonStyle">@style/defaultRadioButtonStyle</item>
        <item name="homeAsUpIndicator">@drawable/ic_nav_back</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_nav_back</item>

        <!-- listView 单选按钮以及背景 -->
        <item name="android:listChoiceBackgroundIndicator">@drawable/sel_item_default</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/sel_checkbox_green_filled</item>

    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/red</item>
        <item name="android:textColorPrimary">@color/text_333</item>
        <item name="android:textColorSecondary">@color/text_666</item>
        <item name="dialogCornerRadius">@dimen/radius_small</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <!--一下背景色设置会让 dialogCornerRadius取值失效 -->
        <!--<item name="android:background">@color/white</item>-->
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
    </style>

    <!--============ 分割线： 以上为主题 以下为样式 ==========================-->

    <style name="activityAnimStyle" parent="@android:style/Animation.Activity">
        <!--新Activity 进入 -->
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right</item>
        <!--旧Activity退出 -->
        <item name="android:activityOpenExitAnimation">@anim/slide_out_to_left</item>
        <!--新Activity退出 -->
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_right</item>
        <!--旧Activity进入 -->
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_from_left</item>

    </style>


    <style name="baseButtonStyle" parent="@android:style/Widget.Button" />

    <style name="defaultButtonStyle" parent="baseButtonStyle">
        <item name="android:height">@dimen/default_button_height</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/sel_rect_c4_green</item>
    </style>

    <style name="defaultEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:paddingLeft">@dimen/default_horizontal_margin</item>
        <item name="android:paddingStart">@dimen/default_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/default_horizontal_margin</item>
        <item name="android:paddingEnd">@dimen/default_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/comm_gap_8</item>
        <item name="android:paddingBottom">@dimen/comm_gap_8</item>
        <item name="android:minHeight">@dimen/default_edittext_height</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="defaultRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/default_color_sel</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/sel_checkbox_green_filled</item>
        <item name="android:drawablePadding">@dimen/default_horizontal_margin</item>
    </style>

    <style name="DialogFragmentStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/red</item>
    </style>


    <style name="CommonDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
</resources>
